{
  "extends": "eslint-config-standard-universal/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "types": [
      "@webgpu/types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/worker/pre-worker.js",
    "src/wasm/jassub-worker-modern.js"
  ]
}